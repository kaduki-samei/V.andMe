<div class="post-index mt-3">
  <% @posts.each do |posts| %>
    <div class="post-card">
      <%= link_to admin_post_path(posts) do %><% end %>
      <div class="post-title">
        <%= posts.title %>
      </div>
      <div class="post-card-user">
        <% if posts.user.profile_image? %>
          <%= image_tag posts.user.profile_image.thumb.url, size: "30", class: "user-icon" %>
        <% else %>
          <%= image_tag "default.png", alt: "user-icon", size: "30", class: "user-icon" %>
        <% end %>
        <%= posts.user.name %>
        <span class="day-date">
          <%= posts.created_at.strftime('%Y/%m/%d') %>
          <% if posts.created_at + 1.day < posts.updated_at %>
            <i class="fas fa-sync-alt"></i><%= posts.updated_at.strftime('%Y/%m/%d') %>
          <% end %>
        </span>
      </div>
      <div class="post-card-tag">
        <% posts.tags.each do |tag| %>
        <span class="mr-1"><i>#</i><%= tag.tag_name %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
