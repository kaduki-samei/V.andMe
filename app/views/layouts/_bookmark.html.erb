<% if post.bookmark_by?(current_user) %>
  <%= link_to post_bookmark_path(post), method: :delete, remote: true, class: "bookmarked" do %>
    <i class="fas fa-bookmark"></i>
    <%= post.bookmarks.count %>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post), method: :post, remote: true, class: "bookmark-yet" do %>
    <i class="fas fa-bookmark"></i>
    <% if post.bookmarks.count >= 1 %>
      <%= post.bookmarks.count %>
    <% end %>
  <% end %>
<% end %>
