<div class="in-container">
  <%= render "layouts/user_info", user: @user %>

  <div class="right-box">
    <% unless @posts.exists? %>
      <p class="gray">投稿記事 0件</p>
    <% else %>

      <p class="gray">投稿記事 <%= @posts.count %>件</p>
      <div class="post-index">
        <% @posts.each do |posts| %>
          <div class="post-card">
            <%= link_to post_path(posts) do %><% end %>
            <div class="post-title">
              <%= posts.title %>
            </div>
            <% if posts.user.profile_image? %>
              <%= image_tag posts.user.profile_image.thumb.url, size: "30", class: "user-icon" %>
            <% else %>
              <%= image_tag "default.png", alt: "user-icon", size: "30", class: "user-icon" %>
            <% end %>
            <%= posts.user.name %>
            <span class="day-date">
              <%= posts.created_at.strftime('%Y/%m/%d') %>
            </span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  </div>
