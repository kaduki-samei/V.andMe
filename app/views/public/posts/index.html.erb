


<div class="right-box ml-5">
  <div class="theme">新着記事</div>
  <div class="post-index mt-4">
    <% @posts.each do |posts| %>
      <div class="post-card">
        <%= link_to post_path(posts) do %><% end %>
        <div class="post-title">
          <%= posts.title %>
        </div>
        <% if posts.user.profile_image? %>
          <%= image_tag posts.user.profile_image.thumb.url, size: "30", class: "user-icon" %>
        <% else %>
          <%= image_tag "default.png", alt: "user-icon", size: "30", class: "user-icon" %>
        <% end %>
        <%= posts.user.name %>
        <span class="day-date">
          <%= posts.created_at.strftime('%Y/%m/%d') %>
        </span>
      </div>
    <% end %>
  </div>
</div>