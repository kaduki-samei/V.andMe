<div class="in-container">
  <%= render "layouts/tag_list", tag_list: @tag_list %>

  <div class="right-box">
    <div class="top-image">
      <!--<div class="top-image-box">-->
      <!--  <p class="top-image-text">「ねぇ、Vリーグ観戦ってどんな感じ？」<br>-->
      <!--      伝えよう！　楽しもう！<br>-->
      <!--      あなたのVリーグ！<br>-->
      <!--  </p>-->
      <!--  <p class="top-image-subtext">投稿や一部機能のご利用には会員登録が必要です。</p>-->
      <!--</div>-->
    </div>

    <div class="post-index mt-4">
      <% @posts.each do |posts| %>
        <div class="post-card">
          <%= link_to post_path(posts) do %><% end %>
          <div class="post-title">
            <%= posts.title %>
          </div>
          <div class="post-card-user">
            <% if posts.user.profile_image? %>
              <%= image_tag posts.user.profile_image.thumb.url, size: "30", class: "user-icon" %>
            <% else %>
              <%= image_tag "default.png", alt: "user-icon", size: "30", class: "user-icon" %>
            <% end %>
            <%= posts.user.name %>
            <span class="day-date">
              <%= posts.created_at.strftime('%Y/%m/%d') %>
            </span>
          </div>
          <div class="post-card-tag">
            <% posts.tags.each do |tag| %>
            <span class="mr-1"><i>#</i><%= tag.tag_name %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>